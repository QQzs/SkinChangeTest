<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zs.demo.MainActivity"
    android:padding="20dp"
    android:orientation="vertical"
    skin:enable="true"
    android:background="@color/background">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="default_skin"
        android:onClick="defaultSkin"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="night_skin"
        android:onClick="nightSkin"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="more_skin"
        android:onClick="moreSkin"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="other_activity"
        android:onClick="other"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="sdadsa"
        android:textColor="@color/text_color"
        skin:enable="true"
        tools:ignore="MissingPrefix" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/view_bg"
        skin:enable="true"
        tools:ignore="MissingPrefix">
    </View>


</LinearLayout>
